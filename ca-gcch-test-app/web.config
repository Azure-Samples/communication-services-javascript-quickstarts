<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- Rewrite HTTP requests on port 8080 to Node.js app (no HTTPS redirect) -->
                <rule name="RewriteHTTP8080ToNode" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                    </conditions>
                    <action type="Rewrite" url="http://localhost:8080/{R:1}" />
                </rule>
                <!-- Redirect HTTPS requests on port 8081 to 443 (standard HTTPS) -->
                
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
